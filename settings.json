{
    // #region BEGIN__[ Workbench ] ----------------------- General #//
    // @danger: Themes
    "workbench.colorTheme": "GitHub Dark Default",          // Тема.
    "workbench.colorCustomizations": {                      // Переопределение цвета темы GitHub Dark Default.
        "editorWhitespace.foreground": "#21262d",         // цвет симолы пробела.
        "editorRuler.foreground": "#161b22",              // цвет вертикальные линии.
        "editorIndentGuide.background:": "#161b22",         // цвет направляющие отступы.
        "editorIndentGuide.activeBackground": "#2d465d",  // цвет направляющие отступы (hover).
    },
    // @danger: Icons
    "workbench.iconTheme": "material-icon-theme",           // Вид иконок в проводнике.
    "material-icon-theme.folders.theme": "classic",         // Тип иконки для папок в проводнике.
    // @danger: .ETC
    "workbench.editor.showTabs": true,                      // Отображать/скрыть открытые вкладки редактора.
    "workbench.editor.showIcons": true,                     // Отображать/скрыть иконки в открытой вкладке редактора.
    "workbench.list.smoothScrolling": true,                 // Плавная прокрутка в проводнике.
    "workbench.list.horizontalScrolling": true,             // Горизонтальный скрол в проводнике.
    "workbench.commandPalette.preserveInput": true,         // Показать последний ввод в палитру команд при следующим открытии.
    "workbench.editor.enablePreview": false,                // Открытые вкладки в режиме просмотра не закрываются.
    "workbench.editor.enablePreviewFromQuickOpen": true,
    "workbench.editor.revealIfOpen": true,
    // #endregion END_[Workbench] - General #//

    // #region BEGIN__[Editor] ---------------------------- General #//
    // @danger: Fonts
    "editor.fontFamily": "'Consolas ligaturized v2', 'Fira Code iScript', 'Fira Code', Consolas, monospace",
    "editor.fontLigatures": true,                           // Отображать/скрыть лигатуры <=>.
    "editor.fontSize": 13,                                  // Размер шрифта.
    "editor.fontWeight": 400,                               // Вес шрифта.
    "editor.lineHeight": 20,                                // Высота строки.
    "editor.letterSpacing": 0.2,                            // Межсимвольное расстояние.
    // @danger: Cursor and Mouse
    "editor.cursorBlinking": "smooth",                      // Стиль анимации курсора.
    "editor.cursorSmoothCaretAnimation": true,              // Вкл/Выкл плавная анимация курсора.
    "editor.cursorStyle": "block",                          // Стиль курсора.
    "editor.cursorSurroundingLines": 5,                     // Количеством видимых начальных и конечных строк scrollOff/scrollOffset.
    "editor.mouseWheelScrollSensitivity": 5,                // Множитель скрола мыши deltaX/deltaY.
    "editor.mouseWheelZoom": false,                         // Маштаб шрифта CTRL + Колесо мыши.
    "editor.smoothScrolling": true,                        // Плавная прокрутка в редакторе.
    // @danger: Word Wrap and Vertical Rulers
    "editor.wordWrap": "off",                               // Перенос строк on/off или wordWrapColumn/bounded.
    "editor.wordWrapColumn": 80,                            // Управление переносм, для editor.wordWrap:wordWrapColumn/bounded.
    "editor.rulers": [60, 80, 120],                         // Вертикальные линии.
    // @danger: Minimap
    "editor.minimap.enabled": true,                         // Отображать/скрыть миникарту.
    "editor.minimap.maxColumn": 100,                        // Ширина миникарты.
    "editor.minimap.renderCharacters": false,               // Отображать содержимое символоми/блоками.
    "editor.minimap.scale": 1,                              // Масштаб содержимого внутри 1-3.
    "editor.minimap.showSlider": "always",                  // Отображать/скрыть локацию экрана на миникарте.
    "editor.minimap.side": "right",                         // Отображать миникарту слева/справа.
    "editor.minimap.size": "proportional",                  // Размером содержимого.
    // @danger: Tabs and Spaces.
    "editor.renderWhitespace": "boundary",                  // Отображать/скрыть символы пробела.
    "editor.insertSpaces": true,                            // Отображать символы в табуляции иначе табы.
    "editor.tabSize": 4,                                    // Размер символов табуляции.
    "editor.detectIndentation": false,                      // Автоопределение размера табуляции.
    "editor.renderIndentGuides": true,                      // Отображать/скрыть направляющие отступы табуляции.
    // @danger: Formatting
    "editor.defaultFormatter": "esbenp.prettier-vscode",    // Форматировщик по умолчанию. [Prettier] Expansion.
    "editor.formatOnType": true,                            // Автоформатирование кода при вводе.
    "editor.formatOnPaste": true,                           // Автоформатирование кода при копипасте.
    "editor.formatOnSave": false,                           // Автоформатирование кода при сохранении.
    "editor.trimAutoWhitespace": true,                      // Удалять пробелы в конце сторк при автозаполнении.
    "files.trimTrailingWhitespace": true,                   // Удалять пробелы в конце сторк при сохранении.
    // @danger: .ETC
    "editor.renderControlCharacters": true,                 // Отображать спецсимволы (https://github.com/microsoft/vscode/issues/116939).
    "editor.scrollBeyondLastLine": false,                   // Прокрутка до последний строки.
    "editor.parameterHints.enabled": false,                 // Всплывающее окно, в котором отображается документация по параметрам и информация о типе по мере ввода.
    // #endregion END_[Editor] - General #//

    // #region BEGIN__[Terminal] -------------------------- General #//
    // @danger: Fonts
    "terminal.integrated.fontFamily": "Consolas ligaturized v2, monospace",
    "terminal.integrated.fontSize": 12,                     // Размер шрифта.
    "terminal.integrated.fontWeight": "normal",             // Вес шрифта.
    "terminal.integrated.fontWeightBold": "bold",           // Вес шрифта выделения.
    "terminal.integrated.lineHeight": 1,                    // Высота строки.
    "terminal.integrated.letterSpacing": 1,                 // Межсимвольное расстояние.
    // @danger: .ETC
    "terminal.integrated.enableBell": true,                 // Вкл/выкл звонок терминала, отображается рядом с именем терминала.
    "terminal.integrated.scrollback": 8000,                 // Количество строк в буфере терминала.
    // #endregion END_[Terminal] - General #//

    // #region BEGIN__[Telemetry and Update] -------------- General #//
    // @danger: null
    "telemetry.enableCrashReporter": false,                 // Отправлять отчеты о сбоях в Microsoft.
    "telemetry.enableTelemetry": false,                     // Отправлять/нет данные в Microsoft.
    "update.enableWindowsBackgroundUpdates": false,         // Загружать новые версий VS Code в фоновом режиме в Windows.
    "update.mode": "manual",                                // Обновление редакторв только в ручную.
    "update.showReleaseNotes": true,                        // Отображать примечания к выпуску после обновления.
    "extensions.autoCheckUpdates": false,                   // Проверка расширений на новые версии.
    "extensions.autoUpdate": false,                         // Обновление расширений только в ручную.
    // #endregion END_[Telemetry and Update] - General #//

    // #region BEGIN__[Debug] -------------- General #//
    // @danger: null
    "debug.allowBreakpointsEverywhere": true,               // Разрешить установку точек останова в любом файле.
    "debug.showInStatusBar": "always",                      // Всегда ображать отладку в строке состояния.
    "debug.toolBarLocation": "docked",                      // Расположение панели инструментов отладки.
    // #endregion END_[Telemetry and Update] - General #//

    // #region BEGIN__[Prettier] -------------------------- 04. Extension #//
    // @danger: https://github.com/prettier/prettier-vscode
    "prettier.useEditorConfig": false,
    "prettier.arrowParens": "avoid",
    "prettier.bracketSpacing": true,
    "prettier.endOfLine": "lf",
    "prettier.htmlWhitespaceSensitivity": "ignore",
    "prettier.insertPragma": false,
    "prettier.jsxBracketSameLine": true,
    "prettier.jsxSingleQuote": false,
    "prettier.printWidth": 100,
    "prettier.proseWrap": "preserve",
    "prettier.quoteProps": "preserve",
    "prettier.requirePragma": false,
    "prettier.semi": false,
    "prettier.singleQuote": true,
    "prettier.tabWidth": 4,
    "prettier.trailingComma": "es5",
    "prettier.useTabs": false,
    "prettier.vueIndentScriptAndStyle": false,
    "prettier.embeddedLanguageFormatting": "auto",
    // #endregion END_[Prettier] - Extension #//

    // #region BEGIN__[Better Comments] ------------------- 05. Extension #//
    // @danger: https://github.com/aaron-bond/better-comments
    "better-comments.multilineComments": true,              // Оформлять многострочные комментарии или нет.
    "better-comments.highlightPlainText": true,             // Оформлять .TXT документы или нет.
    "better-comments.tags": [
        {
            "tag": "@info",                                 // @info - Без памяти разум туп.
            "color": "#79c0ff",                             // Цвет шрифта.
            "strikethrough": false,                         // Зачеркивать шрифта.
            "underline": false,                             // Подчеркивать шрифт.
            "backgroundColor": "#388bfd33",                 // Цвет подложки шрифта.
            "bold": false,                                  // Вес шрифта.
            "italic": true                                  // Шрифт под наклоном.
        },
        {
            "tag": "@danger",                               // @danger - Всё идёт по плану.
            "color": "#56d364",                             // Цвет шрифта.
            "strikethrough": false,                         // Зачеркивать шрифта.
            "underline": false,                             // Подчеркивать шрифт.
            "backgroundColor": "#2ea0431a",                 // Цвет подложки шрифта.
            "bold": false,                                  // Вес шрифта.
            "italic": true                                  // Шрифт под наклоном.
        },
        {
            "tag": "@success",                              // @success - Предупреждён значит вооружён.
            "color": "#e3b341",                             // Цвет шрифта.
            "strikethrough": false,                         // Зачеркивать шрифта.
            "underline": false,                             // Подчеркивать шрифт.
            "backgroundColor": "#bb80091a",                 // Цвет подложки шрифта.
            "bold": false,                                  // Вес шрифта.
            "italic": true                                  // Шрифт под наклоном.
        },
        {
            "tag": "@warning",                              // @warning - Опасайся бед, пока их нет.
            "color": "#ff7b72",                             // Цвет шрифта.
            "strikethrough": false,                         // Зачеркивать шрифта.
            "underline": false,                             // Подчеркивать шрифт.
            "backgroundColor": "#f851491a",                 // Цвет подложки шрифта.
            "bold": false,                                  // Вес шрифта.
            "italic": true                                  // Шрифт под наклоном.
        },
        {
            "tag": "@wtf",                                  // @wtf - А сегодня в завтрашний день не все могут смотреть. Вернее смотреть могут не только лишь все, мало кто может это делать.
            "color": "#30363d",                             // Цвет шрифта
            "strikethrough": false,                         // Зачеркивать шрифта.
            "underline": false,                             // Подчеркивать шрифт.
            "backgroundColor": "transparent",               // Цвет подложки шрифта.
            "bold": false,                                  // Вес шрифта.
            "italic": true                                  // Шрифт под наклоном.
        },
        {
            "tag": "#region",                               // Оформление BEGIN.
            "color": "#e3b341",                             // Цвет шрифта.
            "strikethrough": false,                         // Зачеркивать шрифта.
            "underline": false,                             // Подчеркивать шрифт.
            "backgroundColor": "8a50ff",                    // Цвет подложки шрифта.
            "bold": true,                                   // Вес шрифта.
            "italic": false                                 // Шрифт под наклоном.
        },
        {
            "tag": "#endregion",                            // Оформление END.
            "color": "#e3b341",                             // Цвет шрифта.
            "strikethrough": false,                         // Зачеркивать шрифта.
            "underline": false,                             // Подчеркивать шрифт.
            "backgroundColor": "8a50ff",                    // Цвет подложки шрифта.
            "bold": true,                                   // Вес шрифта.
            "italic": false                                 // Шрифт под наклоном.
        },
    ],
    // #endregion END_[Better Comments] - 05. Extension #//

